{
  "name": "@augment/core",
  "version": "0.0.0",
  "description": "Core plugin host system for loading and managing plugins",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "npm run test:unit && npm run test:esm",
    "test:unit": "jest",
    "test:esm": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.esm.mjs",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "plugin",
    "plugin-system",
    "extensibility",
    "dynamic-loading"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  }
}
