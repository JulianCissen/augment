{
  "name": "@moduul/core",
  "version": "0.1.3",
  "description": "Core plugin host system for loading and managing plugins",
  "keywords": [
    "plugin",
    "plugin-system",
    "extensibility",
    "dynamic-loading"
  ],
  "license": "MIT",
  "author": "Julian Cissen",
  "homepage": "https://github.com/JulianCissen/moduul",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/JulianCissen/moduul.git"
  },
  "bugs": {
    "url": "https://github.com/JulianCissen/moduul/issues"
  },
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "npm run test:unit && npm run test:esm",
    "test:unit": "jest",
    "test:esm": "cross-env NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.esm.mjs",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "devDependencies": {
    "@types/adm-zip": "^0.5.7",
    "@types/jest": "^30.0.0",
    "cross-env": "^10.1.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.6",
    "tsup": "^8.5.1"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  }
}
