{
  "name": "@augment/core",
  "version": "0.0.0",
  "description": "Core plugin host system for loading and managing plugins",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
